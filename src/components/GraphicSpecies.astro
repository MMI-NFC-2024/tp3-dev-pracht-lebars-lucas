---
import PlotFigure from "./PlotFigure.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../assets/penguins.json";

export interface Props {
  species: string;
}

const { species } = Astro.props;
const speciesData = penguins.filter(({species: speciesName}) => speciesName === species);

// Définir les couleurs spécifiques pour chaque espèce
const speciesColors = {
  "Adelie": "oklch(0.623 0.214 259.815)",
  "Gentoo": "oklch(0.795 0.184 86.047)", 
  "Chinstrap": "oklch(0.705 0.213 47.604)"
};

const speciesColor = speciesColors[species] 
---

<PlotFigure
  options={{
    marks: [
      Plot.dot(speciesData, {
        x: "culmen_length_mm",
        y: "culmen_depth_mm",
        stroke: speciesColor,
        fill: "none",
      }),
    ],
  }}
/>